<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.Login_Activity">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar2"/>
    <EditText
        android:id="@+id/edt_email_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:hint=" ایمیل :"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:layout_height="wrap_content"/>
    <EditText


        android:id="@+id/edt_pass_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:hint=" رمز عبور :"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:layout_height="wrap_content"/>

<CheckBox
    android:layout_gravity="right"
    android:id="@+id/ch_pass_login"
    android:layout_marginRight="20dp"
    android:layout_width="wrap_content"
    android:text="نمایش رمز عبور"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_forget_login"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:text="رمز عبور خود را فراموش کردع اید؟!"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/txt_register_login"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="ثبت نام نکرده ام!"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_login_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/green_light"
        android:text="ورود به فروشگاه من"/>


</RelativeLayout>

