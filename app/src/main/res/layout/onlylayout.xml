<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_only"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="240dp"
    android:layout_margin="4dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerfram"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/gray"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@color/gray"
                    />

                <TextView
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">
                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/visibility"/>

                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"

                            android:textSize="11sp"
                            />


                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrshimer"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgonly"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/shopicon"/>

        <TextView
            android:ellipsize="end"
            android:lines="1"
            android:layout_margin="3dp"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:text="گوشی ایفون 10"
            android:id="@+id/txtnameonly"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="10"
                    android:id="@+id/viewonly"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/visibility"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:id="@+id/priceonly"
                    android:textSize="11sp"
                    android:text="666666 تومان"/>


            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>