<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="1dp"

    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/img_basket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/baner" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name_basket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.25"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:lines="1"
                        android:text="گوشی ایفون"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_color_basket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical|right"
                        android:text="رنگ قرمز"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_garanty_basket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical|right"
                        android:text="گارانتی دوساله "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_num_basket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical|right"
                        android:text="2 "
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#e1e1e1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:padding="5dp"
                android:id="@+id/txtprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/txtbasket"
                android:gravity="center_vertical|right"
                android:text=" قیمت محصول:"
                android:textSize="14sp" />


            <TextView
                android:padding="5dp"
                android:id="@+id/txt_price_basket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/txtbasket"
                android:gravity="center_vertical|right"
                android:text="25546546546"
                android:textColor="@color/red"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:background="#e1e1e1"
            android:gravity="center_vertical">


            <TextView
                android:padding="5dp"
                android:id="@+id/txtallprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/txtbasket"
                android:gravity="center_vertical|right"
                android:text="قیمت نهایی محصول:"
                android:textSize="14sp" />


            <TextView
                android:padding="5dp"
                android:id="@+id/txt_allprice_basket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/txtbasket"
                android:gravity="center_vertical|right"
                android:text="25546546546"
                android:textColor="@color/green"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_delet_basket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.1"
            android:gravity="left|center_vertical"
            android:text="حذف"
            android:textColor="@color/red" />


    </LinearLayout>

</androidx.cardview.widget.CardView>